# Verify that after CHANGE PRIMARY, replication (I/O thread and SQL
# thread) restart from where SQL thread left, not from where
# I/O thread left (some old bug fixed in 4.0.17)

call mtr.add_suppression("Replica I/O: The replica I/O thread stops because a fatal error is encountered when it tried to SET @primary_binlog_checksum");

connection replica;
let $save_primary_host= query_get_value(SHOW REPLICA STATUS, Primary_Host, 1);

connection primary;
# Make SQL replica thread advance a bit
create table t1(n int);
--sync_replica_with_primary
select * from t1;
# Now stop it and make I/O replica thread be ahead
stop replica sql_thread;
connection primary;
insert into t1 values(1);
insert into t1 values(2);
save_primary_pos;
let $replica_param= Read_Primary_Log_Pos;
let $replica_param_value= query_get_value(SHOW PRIMARY STATUS, Position, 1);
connection replica;
source include/wait_for_replica_param.inc;
source include/stop_replica.inc;

let $read_pos= query_get_value(SHOW REPLICA STATUS, Read_Primary_Log_Pos, 1);
let $exec_pos= query_get_value(SHOW REPLICA STATUS, Exec_Primary_Log_Pos, 1);
if ($read_pos == $exec_pos)
{
  source include/show_rpl_debug_info.inc;
  echo 'Read_Primary_Log_Pos: $read_pos' == 'Exec_Primary_Log_Pos: $exec_pos';
  die Failed because Read_Primary_Log_Pos is equal to Exec_Primary_Log_Pos;
} 
--replace_column 2 ####
change primary to primary_user='root';
let $read_pos= query_get_value(SHOW REPLICA STATUS, Read_Primary_Log_Pos, 1);
let $exec_pos= query_get_value(SHOW REPLICA STATUS, Exec_Primary_Log_Pos, 1);
if ($read_pos != $exec_pos)
{
  source include/show_rpl_debug_info.inc;
  echo 'Read_Primary_Log_Pos: $read_pos' <> 'Exec_Primary_Log_Pos: $exec_pos';
  die Failed because Read_Primary_Log_Pos is not equal to Exec_Primary_Log_Pos;
}

start replica;
sync_with_primary;
select * from t1;
connection primary;
drop table t1;
--sync_replica_with_primary

# End of 4.1 tests

#
# BUG#12190 CHANGE PRIMARY has differ path requiremts on PRIMARY_LOG_FILE and RELAY_LOG_FILE
#

--source include/rpl_reset.inc

connection primary;
create table t1 (a int);
insert into t1 values (1);
flush logs;
insert into t1 values (2);

# Note: the primary positon saved by this will also be used by the
# 'sync_with_primary' below.
--sync_replica_with_primary

# Check if the table t1 and t2 are identical on primary and replica;
--let $diff_tables= primary:t1, replica:t1
--source include/diff_tables.inc

connection replica;
source include/stop_replica.inc;
delete from t1 where a=2;

# start replication from the second insert, after fix of BUG#12190,
# relay_log_file does not use absolute path, only the filename is
# required
#
# Note: the follow change primary will automatically reset
# relay_log_purge to false, save the old value to restore
let $relay_log_purge= `select @@global.relay_log_purge`;
CHANGE PRIMARY TO relay_log_file='replica-relay-bin.000005', relay_log_pos=4;
start replica sql_thread;
source include/wait_for_replica_sql_to_start.inc;

# Sync to the same position saved by the 'sync_replica_with_primary' above.
sync_with_primary;

# Check if the table t1 and t2 are identical on primary and replica;
--let $diff_tables= primary:t1, replica:t1
--source include/diff_tables.inc

# clean up
connection replica;
start replica io_thread;
source include/wait_for_replica_io_to_start.inc;
eval set global relay_log_purge=$relay_log_purge;
connection primary;
drop table t1;
--sync_replica_with_primary

