--source include/have_debug.inc
--source suite/federated/include/federated.inc

--echo #
--echo # Bug#47525: MySQL crashed (Federated)
--echo #

connection replica;
--echo # Switch to replica
CREATE TABLE t1(a INT);
INSERT INTO t1 VALUES (1);

connection primary;
--echo # Switch to primary
--replace_result $REPLICA_MYPORT REPLICA_PORT
eval CREATE TABLE t1(a INT) ENGINE=FEDERATED
  CONNECTION='mysql://root@127.0.0.1:$REPLICA_MYPORT/test/t1';

SELECT * FROM t1;

--echo # Start a asynchronous reload
--exec $MYSQLADMIN --no-defaults --default-character-set=latin1 -S $PRIMARY_MYSOCK -P $PRIMARY_MYPORT  -u root --password= refresh 2>&1

--echo # Wait for tables to be closed
let $show_statement= SHOW STATUS LIKE 'Open_tables';
let $field= Value;
let $condition= = '0';
--source include/wait_show_condition.inc

--echo # Ensure that the server didn't crash
SELECT * FROM t1;
--echo # Drop tables on primary and replica
DROP TABLE t1;
connection replica;
DROP TABLE t1;

connection default;
--echo # Federated cleanup
source suite/federated/include/federated_cleanup.inc;
