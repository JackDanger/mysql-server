[connection primary]
DROP TABLE IF EXISTS t1;
# On replica
set global innodb_file_per_table = 1;
# On primary
set global innodb_file_per_table = 1;
# Create partitioned table on primary
CREATE TABLE t1 ( i INT ) ENGINE = InnoDB  PARTITION BY HASH(i) PARTITIONS 3;
CREATE TABLE t2 ( i INT ) ENGINE = InnoDB  PARTITION BY KEY(i) PARTITIONS 3;
INSERT INTO t1 VALUES (1),(111),(321);
INSERT INTO t2 VALUES (0),(1),(2);
FLUSH TABLES t1,t2 FOR EXPORT;
include/sync_replica_sql_with_primary.inc
# set MYSQLD_DATADIR with primary datadir to copy idb and cfg files
backup: t1#P#p0
backup: t1#P#p1
backup: t1#P#p2
backup: t2#P#p0
backup: t2#P#p1
# On replica
# check table created on replica
SELECT * FROM t1;
