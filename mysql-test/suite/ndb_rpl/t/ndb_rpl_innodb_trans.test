# Test of a transaction mixing the two engines

-- source include/have_ndb.inc
-- source include/have_innodb.inc
-- source suite/ndb_rpl/ndb_primary-replica.inc

create table t1 (a int, unique(a)) engine=ndbcluster;
create table t2 (a int, unique(a)) engine=innodb;


begin;
insert into t1 values(1);
insert into t2 values(1);
rollback;

select count(*) from t1;
select count(*) from t2;
sync_replica_with_primary;
select count(*) from t1;
select count(*) from t2;
connection primary;

begin;
load data infile '../../../std_data/rpl_loaddata.dat' into table t2;
load data infile '../../../std_data/rpl_loaddata.dat' into table t1;
rollback;

select count(*) from t1;
select count(*) from t2;
sync_replica_with_primary;
select count(*) from t1;
select count(*) from t2;
connection primary;

delete from t1;
delete from t2;
begin;
load data infile '../../../std_data/rpl_loaddata.dat' into table t2;
load data infile '../../../std_data/rpl_loaddata.dat' into table t1;
rollback;

select count(*) from t1;
select count(*) from t2;
sync_replica_with_primary;
select count(*) from t1;
select count(*) from t2;
connection primary;

delete from t1;
delete from t2;
begin;
insert into t2 values(3),(4);
insert into t1 values(3),(4);
load data infile '../../../std_data/rpl_loaddata.dat' into table t2;
load data infile '../../../std_data/rpl_loaddata.dat' into table t1;
rollback;

select count(*) from t1;
select count(*) from t2;
sync_replica_with_primary;
select count(*) from t1;
select count(*) from t2;
connection primary;

drop table t1,t2;
sync_replica_with_primary;
--source include/rpl_end.inc
