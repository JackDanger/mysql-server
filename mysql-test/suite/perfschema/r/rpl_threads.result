"============ Performance schema on primary ============"
select ID from INFORMATION_SCHEMA.PROCESSLIST
where COMMAND = "Binlog Dump"
  into @primary_dump_pid;
select COMMAND, STATE
from INFORMATION_SCHEMA.PROCESSLIST
where ID = @primary_dump_pid;
COMMAND	STATE
Binlog Dump	Primary has sent all binlog to replica; waiting for more updates
select NAME, TYPE, PROCESSLIST_COMMAND, PROCESSLIST_STATE
from performance_schema.threads
where PROCESSLIST_ID = @primary_dump_pid;
NAME	TYPE	PROCESSLIST_COMMAND	PROCESSLIST_STATE
thread/sql/one_connection	FOREGROUND	Binlog Dump	Primary has sent all binlog to replica; waiting for more updates
"============ Performance schema on replica ============"
select ID from INFORMATION_SCHEMA.PROCESSLIST
where STATE like "Waiting for primary to send event%"
  into @replica_io_pid;
select COMMAND, STATE
from INFORMATION_SCHEMA.PROCESSLIST
where ID = @replica_io_pid;
COMMAND	STATE
Connect	Waiting for primary to send event
