==== Case 1: Killed query on primary -> error on replica ====
include/assert.inc [Test only works if binlog_format is statement]
[connection primary]
CREATE DATABASE db1;
USE db1;
CREATE TABLE t1 (a INT) ENGINE = MyISAM;
CREATE TABLE trigger_table (a INT) ENGINE = MyISAM;
SET SQL_LOG_BIN=0;
CREATE TRIGGER trig1 BEFORE INSERT ON t1 FOR EACH ROW
BEGIN
IF NEW.a != 0 THEN
SET @@GLOBAL.BINLOG_FORMAT = 'row';
DO SLEEP(1000000);
END IF;
INSERT INTO trigger_table VALUES (1);
END|
SET SQL_LOG_BIN=1;
INSERT INTO t1 VALUES (0), (1);
[connection primary1]
KILL QUERY <CONNECTION_ID>;
[connection primary]
ERROR 70100: Query execution was interrupted
SET @@GLOBAL.BINLOG_FORMAT = 'STATEMENT';
include/assert.inc [At most one row should be inserted in db1.t1]
include/assert.inc [At least one row should be inserted in db1.trigger_table]
SET SQL_LOG_BIN=0;
DROP TRIGGER trig1;
SET SQL_LOG_BIN=1;
DROP TABLE trigger_table;
DROP TABLE t1;
DROP DATABASE db1;
USE test;
---- Verify there is an error on replica ----
include/sync_replica_io_with_primary.inc
include/wait_for_replica_sql_error.inc [errno=3001]
---- Verify that nothing was inserted on replica -----
include/assert.inc [Nothing should be inserted on replica]
---- Clean up ----
include/stop_replica_io.inc
RESET REPLICA;
RESET PRIMARY;
DROP DATABASE db1;
[connection primary]
RESET PRIMARY;
[connection replica]
include/start_replica.inc
[connection primary]
