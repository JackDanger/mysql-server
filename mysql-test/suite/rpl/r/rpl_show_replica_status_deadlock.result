[connection primary]
# Let primary and replica synced with t1 table created
CREATE TABLE t1 (f INT) ENGINE= INNODB;
include/sync_replica_sql_with_primary.inc
# Setup GLOBAL.DEBUG at replica to reach commit
[connection replica]
SET @@GLOBAL.DEBUG= '+d,dbug.reached_commit';
# Do some DML operation on primary so that it will be blocked on
# replica as global read lock is in place.
[connection primary]
INSERT INTO t1 VALUES (10);
# Issue FLUSH TABLES WITH READ LOCK after Reached is signaled
[connection replica]
SET DEBUG_SYNC='now WAIT_FOR Reached';
FLUSH TABLES WITH READ LOCK;
# Let sql thread continue to try to obtain commit lock
SET DEBUG_SYNC= 'now SIGNAL signal.commit_continue';
# Wait until sql thread enters "Waiting for commit lock" state
[connection replica]
SHOW REPLICA STATUS;
UNLOCK TABLES;
SET @@GLOBAL.DEBUG= '$debug_saved';
[connection primary]
include/sync_replica_sql_with_primary.inc
include/diff_tables.inc [primary:t1, replica:t1]
[connection primary]
DROP TABLE t1;
