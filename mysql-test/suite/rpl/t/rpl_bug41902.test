# Test for Bug #41902 MYSQL_BIN_LOG::reset_logs() doesn't call my_error()
#                     in face of an error
#

--source include/not_group_replication_plugin.inc
source include/have_debug.inc;
source include/primary-replica.inc;

-- disable_query_log
CALL mtr.add_suppression("Failed to locate old binlog or relay log files");
CALL mtr.add_suppression('MYSQL_BIN_LOG::purge_logs was called with file ..primary-bin.000001 not listed in the index.');
-- enable_query_log
--source include/sync_replica_sql_with_primary.inc

#
# test checks that 
# a. there is no crash when find_log_pos() returns with an error
#    that tests expect to receive;
# b. in the case of multiple error messages the first error message is 
#    reported to the user and others are available as warnings.
#

connection replica;
stop replica;

SET @@debug="d,simulate_find_log_pos_error";

--error ER_UNKNOWN_TARGET_BINLOG
reset replica;
show warnings;

SET @@debug="";
reset replica;
change primary to primary_host='dummy';

SET @@debug="d,simulate_find_log_pos_error";

--error ER_UNKNOWN_TARGET_BINLOG
change primary to primary_host='dummy';

SET @@debug="";
reset replica;
change primary to primary_host='dummy';

connection primary;
SET @@debug="d,simulate_find_log_pos_error";
--error ER_UNKNOWN_TARGET_BINLOG
reset primary;

SET @@debug="";
reset primary;

SET @@debug="d,simulate_find_log_pos_error";
--error ER_UNKNOWN_TARGET_BINLOG
purge binary logs to 'primary-bin.000001';

SET @@debug="";
purge binary logs to 'primary-bin.000001';

--echo ==== clean up ====
--connection replica
CHANGE PRIMARY TO PRIMARY_HOST = '127.0.0.1';
--let $rpl_only_running_threads= 1
--source include/rpl_end.inc
