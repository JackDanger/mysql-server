# ==== Purpose ====
#
# This test script serves as the functionality testing for
# WL#6120- Change primary without stopping Replica threads.
#
# This test script does the following:

#  - Ensure that the behavior does not change for CHANGE PRIMARY when both the
#    IO and SQL threads are stopped.
#  - We have two types of options- receiver options and applier options under
#    CHANGE PRIMARY
#    And we have a very simple rule:
#       -  Allow setting receiver options when the receiver is not running,
#       -  Allow setting applier options when the applier is not running,

#    Make sure we stick to the above mentioned rule.

# The follwing scenarios are tested:
#
#  - With both receiver and applier stopped, all CHANGE PRIMARY options should be
#    allowed.
#  - With receiver stopped and applier running, we should be able to change
#    receiver options.
#      - Setting receiver options should throw the correct error message.
#      - Using an allowed option and a not allowed option should error out.
#  - With applier stopped and receiver running, we should be able to change
#    applier options.
#      - Setting applier options should throw the correct error message.
#      - Using an allowed option and a not allowed option should error out.
#
#  ==== Related Worklog(s) And Bug(s)====
#
#  WL#6120- Change primary without stopping Replica threads.
#

--source include/have_gtid.inc
--source include/primary-replica.inc
--source include/have_binlog_format_mixed.inc

--echo
--echo Create a replication user to use in change primary tests.
--echo

--connection primary
set @orig_sql_mode= @@sql_mode;
set sql_mode= (select replace(@@sql_mode,'NO_AUTO_CREATE_USER',''));
GRANT REPLICATION REPLICA ON *.* TO replssl@localhost REQUIRE SSL;
set sql_mode= @orig_sql_mode;
--source include/sync_replica_sql_with_primary.inc

--echo
--echo With both receiver and applier stopped, all CHANGE PRIMARY options should
--echo be allowed.
--echo

--source include/stop_replica.inc

let $primary_log_file= query_get_value(SHOW REPLICA STATUS, Primary_Log_File, 1);
let $primary_log_pos= query_get_value(SHOW REPLICA STATUS, Read_Primary_Log_Pos, 1);
let $primary_id= query_get_value(SHOW REPLICA STATUS, Primary_Server_Id, 1);

--let $save_autoposition= query_get_value(SHOW REPLICA STATUS, Auto_Position, 1)  
CHANGE PRIMARY TO PRIMARY_AUTO_POSITION= 0;

--connection replica
--disable_query_log
replace_result $primary_log_file PRIMARY_LOG_FILE;
replace_result $primary_log_pos PRIMARY_LOG_POS;
replace_result $MYSQL_TEST_DIR MYSQL_TEST_DIR;
replace_column 2 ####;
eval CHANGE PRIMARY TO
  PRIMARY_HOST= 'localhost',
  PRIMARY_USER= 'replssl',
  PRIMARY_PASSWORD= '',
  PRIMARY_PORT= $PRIMARY_MYPORT,
  PRIMARY_CONNECT_RETRY= 20,
  PRIMARY_RETRY_COUNT= 1,
  PRIMARY_DELAY= 20,
  PRIMARY_LOG_FILE= '$primary_log_file',
  PRIMARY_LOG_POS= $primary_log_pos,
  PRIMARY_HEARTBEAT_PERIOD= 20,
  IGNORE_SERVER_IDS= ($primary_id),
  PRIMARY_AUTO_POSITION= 0,
  PRIMARY_SSL= 1,
  PRIMARY_SSL_CA= '$MYSQL_TEST_DIR/std_data/cacert.pem',
  PRIMARY_SSL_CERT= '$MYSQL_TEST_DIR/std_data/client-cert.pem',
  PRIMARY_SSL_KEY= '$MYSQL_TEST_DIR/std_data/client-key.pem',
  PRIMARY_SSL_VERIFY_SERVER_CERT= 1;

--enable_query_log

let $relay_log_file= query_get_value(SHOW REPLICA STATUS, Relay_Log_File, 1);
--replace_result $relay_log_file RELAY_LOG_FILE
eval CHANGE PRIMARY TO RELAY_LOG_FILE= '$relay_log_file';

let $relay_log_pos= query_get_value(SHOW REPLICA STATUS, Relay_Log_Pos, 1);
--replace_result $relay_log_pos RELAY_LOG_POS
eval CHANGE PRIMARY TO RELAY_LOG_POS= $relay_log_pos;

CHANGE PRIMARY TO PRIMARY_AUTO_POSITION= 1;
#Re-setting auto_position=0 to continue testing position related options.
CHANGE PRIMARY TO PRIMARY_AUTO_POSITION= 0;

--echo
--echo  With receiver stopped and applier running, we should be able to change
--echo  receiver options. Setting applier options should throw the correct error
--echo  message.
--echo

--source include/start_replica_sql.inc
--disable_query_log
replace_result $primary_log_file PRIMARY_LOG_FILE;
replace_result $primary_log_pos PRIMARY_LOG_POS;
replace_result $MYSQL_TEST_DIR MYSQL_TEST_DIR;
replace_column 2 ####;
eval CHANGE PRIMARY TO
  PRIMARY_HOST= 'localhost',
  PRIMARY_USER= 'replssl',
  PRIMARY_PASSWORD= '',
  PRIMARY_PORT= $PRIMARY_MYPORT,
  PRIMARY_CONNECT_RETRY= 20,
  PRIMARY_RETRY_COUNT= 1,
  PRIMARY_LOG_FILE= '$primary_log_file',
  PRIMARY_LOG_POS= $primary_log_pos,
  PRIMARY_HEARTBEAT_PERIOD= 20,
  IGNORE_SERVER_IDS= ($primary_id),
  PRIMARY_SSL= 1,
  PRIMARY_SSL_CA= '$MYSQL_TEST_DIR/std_data/cacert.pem',
  PRIMARY_SSL_CERT= '$MYSQL_TEST_DIR/std_data/client-cert.pem',
  PRIMARY_SSL_KEY= '$MYSQL_TEST_DIR/std_data/client-key.pem',
  PRIMARY_SSL_VERIFY_SERVER_CERT= 1;
--enable_query_log

# Now on to some negative testing

# Both receiver and applier needs to be stopped to set the auto_position option.
--error ER_REPLICA_CHANNEL_MUST_STOP
CHANGE PRIMARY TO PRIMARY_AUTO_POSITION= 1;

# Since the applier is running, using the applier options should error out.
--replace_result $relay_log_file RELAY_LOG_FILE
--error ER_REPLICA_CHANNEL_SQL_THREAD_MUST_STOP
eval CHANGE PRIMARY TO RELAY_LOG_FILE= '$relay_log_file';

--replace_result $relay_log_pos RELAY_LOG_POS
--error ER_REPLICA_CHANNEL_SQL_THREAD_MUST_STOP
eval CHANGE PRIMARY TO RELAY_LOG_POS= $relay_log_pos;

--error ER_REPLICA_CHANNEL_SQL_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY= 10;

# Using an allowed option and a not allowed option should throw an error.
--replace_result $relay_log_file RELAY_LOG_FILE
--error ER_REPLICA_CHANNEL_SQL_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_RETRY_COUNT= 1, RELAY_LOG_FILE= '$relay_log_file';

--replace_result $relay_log_pos RELAY_LOG_POS
--error ER_REPLICA_CHANNEL_SQL_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_RETRY_COUNT= 1, RELAY_LOG_POS= $relay_log_pos;

--error ER_REPLICA_CHANNEL_SQL_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_RETRY_COUNT= 1, PRIMARY_DELAY=10;

--echo
--echo  With applier stopped and receiver running, we should be able to change
--echo  applier options. Setting receiver options should throw the correct error
--echo  message.
--echo

--source include/stop_replica_sql.inc
--source include/start_replica_io.inc

--replace_result $relay_log_file RELAY_LOG_FILE
eval CHANGE PRIMARY TO RELAY_LOG_FILE= '$relay_log_file';

--replace_result $relay_log_pos RELAY_LOG_POS
eval CHANGE PRIMARY TO RELAY_LOG_POS= $relay_log_pos;

CHANGE PRIMARY TO PRIMARY_DELAY= 10;

# Now on to some negative testing

# Both receiver and applier needs to be stopped to set the auto_position option.
--error ER_REPLICA_CHANNEL_MUST_STOP
CHANGE PRIMARY TO PRIMARY_AUTO_POSITION= 1;

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_HOST= 'localhost';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_USER= 'replssl';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO  PRIMARY_PASSWORD= '';

--disable_query_log
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_PORT= $PRIMARY_MYPORT;
--enable_query_log

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_CONNECT_RETRY= 20;
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_RETRY_COUNT= 1;

--disable_query_log
--replace_result $primary_log_file PRIMARY_LOG_FILE
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_LOG_FILE= '$primary_log_file';
--replace_result $primary_log_pos PRIMARY_LOG_POS
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_LOG_POS= $primary_log_pos;
--enable_query_log

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_HEARTBEAT_PERIOD= 20;
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_SSL= 1;

--disable_query_log
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_SSL_CA= '$MYSQL_TEST_DIR/std_data/cacert.pem';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_SSL_CERT= '$MYSQL_TEST_DIR/std_data/client-cert.pem';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_SSL_KEY= '$MYSQL_TEST_DIR/std_data/client-key.pem';
--enable_query_log

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_SSL_VERIFY_SERVER_CERT= 1;

# Using an allowed option and a not allowed option should throw an error.

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_HOST= 'localhost';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_USER= 'replssl';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_PASSWORD= '';

--disable_query_log
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_PORT= $PRIMARY_MYPORT;
--enable_query_log

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_CONNECT_RETRY= 20;
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_RETRY_COUNT= 1;

--disable_query_log
--replace_result $primary_log_file PRIMARY_LOG_FILE
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_DELAY= 10, PRIMARY_LOG_FILE= '$primary_log_file';
--replace_result $primary_log_pos PRIMARY_LOG_POS
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_DELAY= 10, PRIMARY_LOG_POS= $primary_log_pos;
--enable_query_log

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY= 10, PRIMARY_HEARTBEAT_PERIOD= 20;
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_SSL=1;

--disable_query_log
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_SSL_CA ='$MYSQL_TEST_DIR/std_data/cacert.pem';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_SSL_CERT= '$MYSQL_TEST_DIR/std_data/client-cert.pem';
--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
eval CHANGE PRIMARY TO PRIMARY_DELAY=10, PRIMARY_SSL_KEY= '$MYSQL_TEST_DIR/std_data/client-key.pem';
--enable_query_log

--error ER_REPLICA_CHANNEL_IO_THREAD_MUST_STOP
CHANGE PRIMARY TO PRIMARY_DELAY= 10, PRIMARY_SSL_VERIFY_SERVER_CERT= 1;

--source include/stop_replica.inc

--echo
--echo cleanup
--echo

replace_column 2 ####;
eval CHANGE PRIMARY TO
  PRIMARY_HOST= '127.0.0.1',
  PRIMARY_USER= 'root',
  PRIMARY_DELAY= 0,
  IGNORE_SERVER_IDS= (),
  PRIMARY_SSL= 0,
  PRIMARY_SSL_CA= '',
  PRIMARY_SSL_CERT= '',
  PRIMARY_SSL_KEY= '',
  PRIMARY_SSL_VERIFY_SERVER_CERT= 0;

--replace_result $save_autoposition SAVE_AUTOPOSITION
eval CHANGE PRIMARY TO PRIMARY_AUTO_POSITION= $save_autoposition;

--source include/start_replica.inc

--connection primary
DROP USER replssl@localhost;

--source include/rpl_end.inc
