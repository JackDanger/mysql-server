--source include/not_embedded.inc
--source include/primary-replica.inc
--source include/have_binlog_format_mixed.inc

#
# BUG#13427949: CHANGE PRIMARY TO USER='' (EMPTY USER) CAUSES ERRORS ON VALGRING 
#

--connection replica
call mtr.add_suppression(".*Invalid .* username when attempting to connect to the primary server.*");


# Assert that we disallow empty users and that no problem
--source include/stop_replica.inc
--replace_column 2 ####
CHANGE PRIMARY TO PRIMARY_USER= '', PRIMARY_PASSWORD= '';
START REPLICA;
--let $replica_io_errno= 1045, 1593
--source include/wait_for_replica_io_error.inc
--source include/stop_replica.inc

--replace_column 2 ####
CHANGE PRIMARY TO PRIMARY_USER= 'root', PRIMARY_PASSWORD= '';
START REPLICA;

--source include/rpl_end.inc 
