##############################################
# Change Author: JBM
# Change Date: 2006-02-07
# Change: Added ENGINE=MyISAM
# Purpose: According to TU in 16552 This is how
# to work around NDB's issue with temp tables
##############################################
--source include/not_gtid_enabled.inc
source include/primary-replica.inc;
source include/have_myisam.inc;
source include/have_binlog_format_mixed_or_statement.inc;

--disable_warnings
create database if not exists mysqltest;
--enable_warnings

connect (con_temp,127.0.0.1,root,,test,$PRIMARY_MYPORT,);

connection con_temp;
use mysqltest;
create temporary table mysqltest.t1 (n int)ENGINE=MyISAM;
create temporary table mysqltest.t2 (n int)ENGINE=MyISAM;

disconnect con_temp;
--source include/wait_until_disconnected.inc

connection primary;
-- let $wait_binlog_event= DROP
-- source include/wait_for_binlog_event.inc
sync_replica_with_primary;

connection replica;
show status like 'Replica_open_temp_tables';
# Cleanup
connection primary;
drop database mysqltest;
sync_replica_with_primary;

#
# Bug#49137
# This test verifies if DROP MULTI TEMPORARY TABLE 
# will cause different errors on primary and replica, 
# when one or more of these tables do not exist. 
#

connection primary;
DROP TEMPORARY TABLE IF EXISTS tmp1;
CREATE TEMPORARY TABLE t1 ( a int );
--error 1051
DROP TEMPORARY TABLE t1, t2;
--error 1051
DROP TEMPORARY TABLE tmp2;
sync_replica_with_primary;

connection replica;
stop replica;
wait_for_replica_to_stop;

--echo **** On Primary ****
connection primary;
CREATE TEMPORARY TABLE tmp3 (a int);
DROP TEMPORARY TABLE tmp3;

connection replica;
SET GLOBAL SQL_REPLICA_SKIP_COUNTER=1;
START REPLICA;

connection primary;
sync_replica_with_primary;


#
# BUG#54842: DROP TEMPORARY TABLE not binlogged after manual switching binlog format to ROW
#

--source include/rpl_reset.inc
--connection primary

CREATE TABLE t1 ( i INT );
--sync_replica_with_primary
SHOW STATUS LIKE 'Replica_open_temp_tables';

--connect(con1,localhost,root,,)
CREATE TEMPORARY TABLE ttmp1 ( i INT );
SET SESSION binlog_format=ROW;
--disconnect con1

-- connection primary
--let $wait_binlog_event= DROP
--source include/wait_for_binlog_event.inc
--sync_replica_with_primary
SHOW STATUS LIKE 'Replica_open_temp_tables';

--connection primary
--source include/show_binlog_events.inc
DROP TABLE t1;

# End of 4.1 tests
--source include/rpl_end.inc
