--source include/have_binlog_format_mixed.inc
--source include/primary-replica.inc

#
# BUG#12987771: REPLICATED STATEMENTS ARE DUPLICATED IN THE REPLICA GENERAL LOG 
#
--connection replica

--source include/stop_replica.inc

SET @old_log_output= @@log_output;
SET GLOBAL log_output= 'TABLE';
TRUNCATE mysql.general_log;

--source include/start_replica.inc

--connection primary
CREATE TABLE t1 (i int NOT NULL PRIMARY KEY);

--source include/sync_replica_sql_with_primary.inc 

--let $assert_cond= [SELECT count(*) as N FROM mysql.general_log WHERE argument="CREATE TABLE t1 (i int NOT NULL PRIMARY KEY)", N, 1] = 1
--let $assert_text= The replica thread does not write the same statement twice to the general log
--source include/assert.inc

--connection primary
DROP TABLE t1;
--source include/sync_replica_sql_with_primary.inc

--source include/stop_replica.inc

SET GLOBAL log_output= @old_log_output;
TRUNCATE mysql.general_log;
--source include/start_replica.inc

--source include/rpl_end.inc
