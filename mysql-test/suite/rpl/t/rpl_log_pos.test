#
# Testing of setting replica to wrong log position with primary_log_pos
#

# Passes with rbr no problem, removed statement include [jbm]

--source include/not_group_replication_plugin.inc
source include/not_gtid_enabled.inc;
source include/primary-replica.inc;
call mtr.add_suppression ("Replica I/O for channel '': Got fatal error 1236 from primary when reading data from binary");
source include/show_primary_status.inc;
--source include/sync_replica_sql_with_primary.inc
source include/stop_replica.inc;

--replace_result 75 PRIMARY_LOG_POS
change primary to primary_log_pos=75;
let $status_items= Read_Primary_Log_Pos;
source include/show_replica_status.inc;
start replica;
let $replica_io_errno= 1236;
--let $show_replica_io_error= 1
# Mask line numbers
--let $replica_io_error_replace= / at [0-9]*/ at XXX/
source include/wait_for_replica_io_error.inc;
source include/stop_replica_sql.inc;

connection primary;
source include/show_primary_status.inc;
create table if not exists t1 (n int);
drop table if exists t1;
create table t1 (n int);
insert into t1 values (1),(2),(3);
save_primary_pos;
connection replica;
--replace_result 4 PRIMARY_LOG_POS
change primary to primary_log_pos=4;
start replica;
sync_with_primary;
select * from t1 ORDER BY n;
connection primary;
drop table t1;
--source include/sync_replica_sql_with_primary.inc

