# In this test we make sure that the replica does a recovery when the it is
# brought up after it has stopped due to error in one or more of its workers.
--source include/not_group_replication_plugin.inc
-- source include/have_debug.inc
-- source include/not_valgrind.inc
-- source include/primary-replica.inc
-- let $saved_debug=`SELECT @@global.DEBUG`
SET GLOBAL DEBUG ='+d,set_commit_parent_100';

# set up the tables and replicate it to the replica.
CREATE TABLE t1 (a int primary key) engine=innodb;
CREATE TABLE t2 (a int primary key) engine=innodb;
CREATE TABLE t3 (a int primary key) engine=innodb;
CREATE TABLE t4 (a int primary key) engine=innodb;
-- source include/sync_replica_sql_with_primary.inc
-- source include/stop_replica.inc
-- let $saved_debug_replica=`SELECT @@global.DEBUG`
SET GLOBAL DEBUG ='+d,crash_in_a_worker';

-- connection primary

SET GLOBAL DEBUG ='-d,set_commit_parent_100';
SET GLOBAL DEBUG ='+d,set_commit_parent_150';

# execute transactions

# TRX1
INSERT INTO t1 values (1),(2),(3);

# trx2 will fail on the replica.
BEGIN;
INSERT INTO t2 values (1),(2),(3);
UPDATE t2 SET a= a+1 WHERE a=3;
COMMIT;

# trx3
INSERT INTO t3 values (1),(2),(3);

# trx4
INSERT INTO t4 values (1),(2),(3);

--disable_query_log ONCE
--disable_result_log ONCE
SET GLOBAL DEBUG ='$saved_debug';

--connection replica
# make sure mtr expects a crash & restarts
-- exec echo "wait" > $MYSQLTEST_VARDIR/tmp/mysqld.2.expect
START REPLICA;
-- source include/wait_until_disconnected.inc
-- let $rpl_server_number= 2
-- source include/rpl_start_server.inc
-- enable_reconnect
-- echo # Reconnecting to the replica server
-- source include/wait_until_connected_again.inc
-- connection replica
-- disable_query_log ONCE
-- disable_result_log ONCE
-- disable_reconnect
-- eval SET GLOBAL DEBUG ='$saved_debug_replica';

-- connection replica
START REPLICA UNTIL SQL_AFTER_MTS_GAPS;

# we need to send an additional event since the UNTIL CONDITION
# needs an aditional event after the failed group to stop the replica
# due to buf in until conditions
-- connection primary
CREATE TABLE t5 (a int);

-- connection replica
-- source include/wait_for_replica_sql_to_stop.inc
-- source include/start_replica.inc

# cleanup
-- connection primary
DROP TABLES t1, t2, t3, t4, t5;
-- connection primary
-- source include/sync_replica_sql_with_primary.inc
-- source include/rpl_end.inc

