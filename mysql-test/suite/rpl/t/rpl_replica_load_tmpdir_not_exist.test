##########################################################################
# This test verifies if the start replica fails gracefuly when an 
# invalid directory is used to set --replica-load-tmpdir.
##########################################################################
--source include/not_group_replication_plugin.inc
--source include/have_log_bin.inc
--source include/not_embedded.inc

--let $rpl_skip_start_replica= 1
--source include/primary-replica.inc

--connection replica
START REPLICA;
#Error Code:12 (EE_DIR) Can't read dir is expected
call mtr.add_suppression("Replica SQL.*Unable to use replica.s temporary directory.* Error_code: 12");
--let $replica_sql_errno= 12
source include/wait_for_replica_sql_error.inc;

--source include/stop_replica_io.inc
RESET REPLICA;

--let $rpl_only_running_threads= 1
--source include/rpl_end.inc
