#
# BUG#47103
# 
# This test case checks whether the replica crashes or not when there is
# a merge table in use.
#
# Description
# ===========
#
# The test case creates two regular MyISAM tables on the primary and
# one MERGE table. Then it populates the MyISAM tables, updates and 
# deletes their contents through the merge table. Finally, the replica
# is synchronized with the primary and (after the fix) it won't crash.
# 
--source include/not_group_replication_plugin.inc
--source include/have_binlog_format_row.inc
--source include/have_myisam.inc
--source include/primary-replica.inc
--connection primary

CREATE TABLE t1 (a int) ENGINE=MyISAM;
CREATE TABLE t2 (a int) ENGINE=MyISAM;
INSERT INTO t1 VALUES (1), (2), (3);
INSERT INTO t2 VALUES (4), (5), (6);
CREATE TABLE IF NOT EXISTS t1_merge LIKE t1;
ALTER TABLE t1_merge ENGINE=MERGE UNION (t2, t1);

--source include/sync_replica_sql_with_primary.inc

--let diff_tables=primary:test.t1, replica:test.t1
--source include/diff_tables.inc

--let diff_tables=primary:test.t2, replica:test.t2
--source include/diff_tables.inc

--connection primary
UPDATE t1_merge SET a=10 WHERE a=1;
DELETE FROM t1_merge WHERE a=10;

--source include/sync_replica_sql_with_primary.inc
--connection primary

--let diff_tables=primary:test.t1, replica:test.t1
--source include/diff_tables.inc

--let diff_tables=primary:test.t2, replica:test.t2
--source include/diff_tables.inc

DROP TABLE t1_merge, t1, t2;
--source include/sync_replica_sql_with_primary.inc

--source include/rpl_end.inc
