--source include/not_group_replication_plugin.inc
-- source include/have_binlog_format_row.inc
-- source include/have_utf32.inc
-- source include/primary-replica.inc

# Max key length in InnoDB is 767, whereas, in MyISAM it is 1000     # WL#6921
--let $key_length_innodb=767
SET GLOBAL innodb_large_prefix=OFF;

#
# BUG#51787 Assertion `(n % 4) == 0' on replica upon INSERT into a table with UTF32
#

SET SQL_LOG_BIN=0;
SET sql_mode = 'NO_ENGINE_SUBSTITUTION';
--replace_result $key_length_innodb 1000
CREATE TABLE t1 (c1 char(255) DEFAULT NULL, KEY c1 (c1)) DEFAULT CHARSET=utf32;
SET sql_mode = default;
SET SQL_LOG_BIN=1;

-- connection replica

SET @saved_replica_type_conversions= @@global.replica_type_conversions;

#
#  Force test to cover conversion execution path in the
#  replica, which also makes use of sql_type method, thence
#  can ultimately trigger the assertion.
#
-- source include/stop_replica.inc
SET GLOBAL REPLICA_TYPE_CONVERSIONS='ALL_NON_LOSSY';
-- source include/start_replica.inc

SET GLOBAL innodb_large_prefix=OFF;
SET SQL_LOG_BIN=0;
SET sql_mode = 'NO_ENGINE_SUBSTITUTION';
--replace_result $key_length_innodb 1000
CREATE TABLE t1 ( c1 varchar(255) DEFAULT NULL, KEY c1 (c1)) DEFAULT CHARSET=utf32;
SET sql_mode = default;
SET SQL_LOG_BIN=1;
SET GLOBAL innodb_large_prefix=default;

-- connection primary

SET GLOBAL innodb_large_prefix=default;
INSERT INTO t1(c1) VALUES ('insert into t1');
DROP TABLE t1;

--source include/sync_replica_sql_with_primary.inc

# assertion: the replica woul hit an/several assertions:
#            before and during replica conversion procedure
#            Now that is fixed, it wont.

SET GLOBAL REPLICA_TYPE_CONVERSIONS= @saved_replica_type_conversions;
-- source include/stop_replica.inc
-- source include/start_replica.inc
-- connection primary
--source include/rpl_end.inc
