# ==== Purpose ====
#
# This test checks that the replica I/O thread refuses to start if replica
# and primary have the same server id (because this is a useless setup,
# and otherwise SHOW REPLICA STATUS shows progress but all queries are
# ignored, which has caught our customers).
#
# ==== Notes ====
#
# This test was called rpl_server_id1.test prior to MySQL 5.7.5.

--let $rpl_topology= 2->2
--let $rpl_skip_start_replica= 1
--source include/rpl_init.inc

--connection server_2
START REPLICA;
# 1593 = ER_REPLICA_FATAL_ERROR
--let $replica_io_errno= 1593
--let $show_replica_io_error= 1
--source include/wait_for_replica_io_error.inc

--source include/stop_replica_sql.inc
RESET REPLICA;

--let $rpl_only_running_threads= 1
--source include/rpl_end.inc
