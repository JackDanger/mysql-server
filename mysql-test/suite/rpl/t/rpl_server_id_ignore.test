# This test checks that the replica rejects events originating
# by a server from the list of ignored originators (bug#27808 etc)
#
# phases of tests:
#
# 0. primary_id new line in show replica status
# 1. syntax related:
#    a. error reporting if options clash;
#    b. overriding the old IGNORE_SERVER_IDS setup by the following
#       CHANGE PRIMARY ... IGNORE_SERVER_IDS= (list);
#    c. the old setup preserving by CHANGE PRIMARY w/o IGNORE_SERVER_IDS
#    d. resetting the ignored server ids with the empty list arg to
#       IGNORE_SERVER_IDS=()
#    e. RESET REPLICA preserves the list
#    f. RESET REPLICA ALL should empty the list.
# 2. run time related:
#    a. observing no processing events from a primary listed in IGNORE_SERVER_IDS
#    b. nullifying the list and resuming of taking binlog from the very beginning with
#       executing events this time
#
# Related BUGS: Bug #18816897- IGNORE_SERVER_IDS NOT RESETTING POST RESET REPLICA ALL
#

source include/primary-replica.inc;
source include/have_binlog_format_mixed.inc;

connection replica;

# a new line for primary_id
let $primary_id= query_get_value(SHOW REPLICA STATUS, Primary_Server_Id, 1);
echo primary_id: $primary_id;

stop replica;
--echo *** --replicate-same-server-id and change primary option can clash ***
--replace_column 2 ####
--error ER_REPLICA_IGNORE_SERVER_IDS
change primary to IGNORE_SERVER_IDS= (2, 1);
--echo *** must be empty due to the error ***
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);
echo ignore server id list: $ignore_list;

--replace_column 2 ####
change primary to IGNORE_SERVER_IDS= (10, 100);
--echo *** must be 10, 100 ***
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);
echo ignore server id list: $ignore_list;
reset replica;
--echo *** must be still (10,100) after reset replica ***
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);
echo ignore server id list: $ignore_list;
--replace_column 2 ####
change primary to IGNORE_SERVER_IDS= (10, 100);
--echo *** CHANGE PRIMARY with IGNORE_SERVER_IDS option overrides (does not increment) the previous setup ***
--replace_column 2 ####
change primary to IGNORE_SERVER_IDS= (5, 1, 4, 3, 1);
--echo *** must be 1, 3, 4, 5 due to overriding policy ***
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);
echo ignore server id list: $ignore_list;
--echo *** ignore primary (server 1) queries for a while ***
--source include/start_replica.inc

connection primary;

#connection replica;
--source include/sync_replica_sql_with_primary.inc
let $replica_relay_pos0= query_get_value(SHOW REPLICA STATUS, Relay_Log_Pos, 1);

connection primary;
create table t1 (n int);
let $primary_binlog_end= query_get_value(SHOW PRIMARY STATUS, Position, 1);

connection replica;
let $replica_param= Exec_Primary_Log_Pos;
let $replica_param_value= $primary_binlog_end;
source include/wait_for_replica_param.inc;
--echo *** must be empty as the event is to be filtered out ***
show tables;
--echo *** allowing events from primary ***
let $replica_relay_pos1= query_get_value(SHOW REPLICA STATUS, Relay_Log_Pos, 1);
#
# checking stability of relay log pos
#
if (`select $replica_relay_pos1 - $replica_relay_pos0`)
{
    --echo Error: relay log position changed:  $replica_relay_pos0, $replica_relay_pos1
    query_vertical show replica status;
}

stop replica;
source include/wait_for_replica_to_stop.inc;
reset replica;
--replace_column 2 ####
change primary to IGNORE_SERVER_IDS= (10, 100);
--echo *** the list must remain (10, 100) after reset replica ***
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);

--replace_column 2 ####
change primary to IGNORE_SERVER_IDS= ();
--echo *** must be empty due to IGNORE_SERVER_IDS empty list ***
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);
echo ignore server id list: $ignore_list;

--echo *** RESET REPLICA ALL should empty the list ***

CHANGE PRIMARY TO IGNORE_SERVER_IDS= (10, 100);
let $ignore_list= query_get_value(SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1);
echo ignore server id list: $ignore_list;

RESET REPLICA ALL;

--replace_result $PRIMARY_MYPORT PRIMARY_PORT
--replace_column 2 ####
eval change primary to primary_host='127.0.0.1', primary_port=$PRIMARY_MYPORT, primary_user='root';
--source include/start_replica.inc

--let $assert_text= RESET REPLICA ALL must empty the list of server-ids.
--let $assert_cond= "[SHOW REPLICA STATUS, Replicate_Ignore_Server_Ids, 1]" = ""
--source include/assert.inc

connection primary;

#connection replica;
--source include/sync_replica_sql_with_primary.inc
--echo *** must have caught create table ***
show tables;

# cleanup
connection primary;
drop table t1;
#connection replica
--source include/sync_replica_sql_with_primary.inc

--echo # === Bug#18192817 IGNORE_SERVER_IDS IS SHOWING DUPLICATE SERVER IDS ===

# The bug caused the field Replicate_Ignore_Server_Ids in SHOW REPLICA STATUS
# show up duplicate values. Verify that the values are NOT duplicated.

--source include/stop_replica.inc

--echo The list should have 0 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

CHANGE PRIMARY TO IGNORE_SERVER_IDS= (110,220,330,420);

--echo The list should have 4 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

CHANGE PRIMARY TO IGNORE_SERVER_IDS= (110,220,330,420), IGNORE_SERVER_IDS= (110,220,330,420);

--echo The list should still have only 4 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

--echo ISSUE WAS HERE: All server ids should be stored and showed only once, while they are set twice or even more.
--echo The list should have 5 elements.
CHANGE PRIMARY TO IGNORE_SERVER_IDS= (110,220,330,420), IGNORE_SERVER_IDS= (111,220,330,420);

--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

CHANGE PRIMARY TO IGNORE_SERVER_IDS= (110,220,330,420), IGNORE_SERVER_IDS= (111,221,330,420);

--echo The list should have 6 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

CHANGE PRIMARY TO IGNORE_SERVER_IDS= (110,220,330,420), IGNORE_SERVER_IDS= (111,221,331,420);

--echo The list should have 7 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

CHANGE PRIMARY TO IGNORE_SERVER_IDS= (110,220,330,420), IGNORE_SERVER_IDS= (111,221,331,421);

--echo The list should have 8 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

# Cleanup
CHANGE PRIMARY TO IGNORE_SERVER_IDS= ();

--echo The list should have NO elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

--echo # === Bug #18593479: ON PRIMARY_INFO_REPOSITORY CHANGE, ===
--echo # === IGNORE_SERVER_IDS DOUBLES WITH DUP VALUES        ===

# The bug caused the ignore_server_list to double the set of values everytime
# the repository type changed. This was seen when changing from FILE repository
# to TABLE repository or vice-versa. For example given repository type= FILE
#  ignore_server_ids= (5, 10, 15) followed by
#  SET GLOBAL primary_info_repository='TABLE';
#  would make ignore_server_ids= (5, 10, 15, 5, 10, 15).
#
#  Also a SET GLOBAL primary_info_repository= FILE again would make
#  ignore_server_ids= (5, 10, 15, 5, 10, 15, 5, 10, 15, 5, 10, 15).

--let $saved_repo_type= `SELECT @@GLOBAL.PRIMARY_INFO_REPOSITORY`

SET GLOBAL primary_info_repository= 'FILE';
CHANGE PRIMARY TO IGNORE_SERVER_IDS= (5,10,15);
--source include/start_replica.inc

--echo Expect 3 elements.
--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

--source include/stop_replica.inc
SET GLOBAL primary_info_repository= 'TABLE';
--source include/start_replica.inc


--echo
--echo ISSUE WAS HERE: Due to buggy behaviour, we woule see 6 elements here.
-- echo Expect 3 elements ONLY to verify the fix when changing from FILE->TABLE.

--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

--source include/stop_replica.inc
SET GLOBAL primary_info_repository= 'FILE';
--source include/start_replica.inc

--echo
--echo ISSUE WAS HERE TOO: Due to buggy behaviour, we woule see 12 elements here.
-- echo Expect 3 elements ONLY to verify the fix when changinf from TABLE->FILE.

--let $status_items= Replicate_Ignore_Server_Ids
--source include/show_replica_status.inc
--echo

# Cleanup
--source include/stop_replica.inc
CHANGE PRIMARY TO IGNORE_SERVER_IDS= ();
--disable_query_log ONCE
--eval SET GLOBAL primary_info_repository= '$saved_repo_type'
--source include/start_replica.inc
--connection primary

--source include/rpl_end.inc
