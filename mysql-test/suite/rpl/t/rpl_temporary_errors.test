--source include/not_group_replication_plugin.inc
--source include/have_debug.inc
--source include/have_binlog_format_row.inc
--source include/primary-replica.inc

call mtr.add_suppression("Deadlock found");

--echo **** On Primary ****
connection primary;
CREATE TABLE t1 (a INT PRIMARY KEY, b INT);
INSERT INTO t1 VALUES (1,1), (2,2), (3,3), (4,4);
--echo **** On Replica ****
--source include/sync_replica_sql_with_primary.inc
SHOW STATUS LIKE 'Replica_retried_transactions';
# since bug#31552/31609 idempotency is not default any longer. In order
# the following UPDATE t1 to pass the mode is switched temprorarily
set @@global.replica_exec_mode= 'IDEMPOTENT';
UPDATE t1 SET a = 5, b = 47 WHERE a = 1;
SELECT * FROM t1 order by a;
--echo **** On Primary ****
connection primary;
UPDATE t1 SET a = 5, b = 5 WHERE a = 1;
SELECT * FROM t1 order by a;
#SHOW BINLOG EVENTS;
--echo **** On Replica ****
--source include/sync_replica_sql_with_primary.inc
set @@global.replica_exec_mode= default;
SHOW STATUS LIKE 'Replica_retried_transactions';
SELECT * FROM t1 order by a;
source include/check_replica_is_running.inc;

connection replica;
call mtr.add_suppression("Replica SQL.*Could not execute Update_rows event on table test.t1");

--echo **** On Primary ****
connection primary;
DROP TABLE t1;

--source include/rpl_end.inc
