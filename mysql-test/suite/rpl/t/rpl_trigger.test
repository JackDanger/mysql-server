#
# Test specific triggers including SELECT into var with replication
# BUG#13227:
# replica performs an update to the replicatable table, t1, 
# and modifies its local data, t3, by mean of its local trigger that uses
# another local table t2.
# Expected values are commented into queries.
#
# Body of the test executes in a loop since the problem occurred randomly.
# 

let $max_rows=5;
let $rnd=10;

--echo test case for BUG#13227
while ($rnd)
{
  --echo -------------------
    echo $rnd;
  --echo -------------------

### SETUP

--disable_warnings
  connection primary;
  eval drop table if exists t1$rnd;
  connection replica;
  eval drop table if exists t2$rnd,t3$rnd;
--enable_warnings

  connection primary;
  eval create table t1$rnd (f1 int)  /* 2 replicate */;  
  let $i=$max_rows;
  while ($i)
  {
    eval insert into t1$rnd values (-$i);
    dec $i;
  }

  --source include/sync_replica_sql_with_primary.inc
#connection replica;
  eval select * from t1$rnd;
  delimiter |;
  eval create trigger trg1$rnd before update on t1$rnd /* replica local */
  for each row
  begin
    DECLARE r integer;
    SELECT f2 INTO r FROM t2$rnd where f1=NEW.f1;
    INSERT INTO t3$rnd values (r);
  end|
  delimiter ;|
  eval create table t2$rnd (f1 int, f2 int) /* replica local */;        
  eval create table t3$rnd (f3 int) /* replica local */;                
  let $i=$max_rows;
  while ($i) 
  {
    eval insert into t2$rnd values ($i, $i*100);
    dec $i;
  }

### Test

#connection replica;

# trigger works as specified when updates from replica
  eval select * from t2$rnd;
  eval UPDATE t1$rnd SET f1=$max_rows where f1=-$max_rows;
  eval SELECT * from t1$rnd /* must be f1 $max_rows, 1 - $max_rows 2 - $max_rows ... -1 */;
  eval SELECT * from t3$rnd /* must be f3 $max_rows*100 */;

  connection primary;
  let $i=$max_rows;
  while ($i)
  {
    eval UPDATE t1$rnd SET f1=$i where f1=-$i;
    dec $i;
  }
  
  --source include/sync_replica_sql_with_primary.inc
#connection replica;
  eval SELECT * from t1$rnd /* must be f1 $max_rows ... 1 */;
  eval SELECT * from t3$rnd /* must be f3 $max_rows * 100 ...  100 */;
  
### CLEANUP
#connection replica;
  eval drop trigger trg1$rnd;
  eval drop table t2$rnd,t3$rnd;
  
  connection primary;
  eval drop table t1$rnd;
  --source include/sync_replica_sql_with_primary.inc
  connection primary;
  
  dec $rnd;
}


#
# BUG#16266: Definer is not fully qualified error during replication.
#
# The idea of this test is to emulate replication of a trigger from the old
# primary (primary w/o "DEFINER in triggers" support) to the new replica and check
# that:
#   1. the trigger on the replica will be replicated w/o errors;
#   2. the trigger on the replica will be non-SUID (will have no DEFINER);
#   3. the trigger can be activated later on the replica w/o errors.
#
# In order to emulate this kind of replication, we make the replica playing the binlog,
# recorded by 5.0.16 primary. This binlog contains the following statements:
#   CREATE TABLE t1(c INT);
#   CREATE TABLE t2(s CHAR(200));
#   CREATE TRIGGER trg1 AFTER INSERT ON t1
#     FOR EACH ROW
#       INSERT INTO t2 VALUES(CURRENT_USER());
#   INSERT INTO t1 VALUES(1);
#

# 1. Check that the trigger's replication is succeeded.

# Stop the replica.

connection replica;
STOP REPLICA;

# Replace primary's binlog.

connection primary;
let $MYSQLD_DATADIR= `select @@datadir`;
FLUSH LOGS;

# Stop primary server
--let $rpl_server_number= 1
--source include/rpl_stop_server.inc

# Replace binlog
remove_file $MYSQLD_DATADIR/primary-bin.000001;
copy_file $MYSQL_TEST_DIR/std_data/bug16266.000001 $MYSQLD_DATADIR/primary-bin.000001;

--let $rpl_server_number= 1
--source include/rpl_start_server.inc

let $binlog_version= query_get_value(SHOW BINLOG EVENTS, Info, 1);


# Make the replica to replay the new binlog.
--echo --> Primary binlog: $binlog_version

# Make the replica to replay the new binlog.

connection replica;
RESET REPLICA;
START REPLICA;

SELECT PRIMARY_POS_WAIT('primary-bin.000001', 513) >= 0;

# Check that the replication succeeded.

SHOW TABLES LIKE 't_';
--replace_column 6 #
SHOW TRIGGERS;
# We disable warnings here since it affects the result file in different ways
# depending on the mode being used.
disable_warnings;

SELECT * FROM t1;
SELECT * FROM t2;

# 2. Check that the trigger is non-SUID on the replica;
# 3. Check that the trigger can be activated on the replica.
#
INSERT INTO t1 VALUES(2);
enable_warnings;

SELECT * FROM t1;
SELECT * FROM t2;

# That's all, cleanup.

DROP TRIGGER trg1;
DROP TABLE t1;
DROP TABLE t2;

STOP REPLICA;
RESET REPLICA;

# The primary should be clean.

connection primary;
SHOW TABLES LIKE 't_';
--replace_column 6 #
SHOW TRIGGERS;

RESET PRIMARY;

# Restart replica.

connection replica;
START REPLICA;


