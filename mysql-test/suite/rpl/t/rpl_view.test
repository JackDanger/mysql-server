# NYI - row-based cannot use CREATE ... SELECT

--source include/not_group_replication_plugin.inc
source include/primary-replica.inc;
--disable_warnings
drop table if exists t1,v1;
drop view if exists t1,v1;
--source include/sync_replica_sql_with_primary.inc
--enable_warnings

#
# Check that creation drop of view is replicated, also check replication of
# updating of view
#
connection primary;
create table t1 (a int);
insert into t1 values (1);
create view v1 as select a from t1;
insert into v1 values (2);
select * from v1 order by a;
--source include/sync_replica_sql_with_primary.inc
# view already have to be on replica
select * from v1 order by a;
connection primary;
update v1 set a=3 where a=1;
select * from v1 order by a;
--source include/sync_replica_sql_with_primary.inc
select * from v1 order by a;
connection primary;
delete from v1 where a=2;
select * from v1 order by a;
--source include/sync_replica_sql_with_primary.inc
select * from v1 order by a;
connection primary;
# 'alter view' internally maped to creation, but still check that it works
alter view v1 as select a as b from t1;
--source include/sync_replica_sql_with_primary.inc
select * from v1 order by 1;
connection primary;
drop view v1;
--source include/sync_replica_sql_with_primary.inc
#error, because view have to be removed from replica
-- error 1146
select * from v1 order by a;
connection primary;
drop table t1;
--source include/sync_replica_sql_with_primary.inc
