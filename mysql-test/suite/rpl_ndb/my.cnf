!include include/default_mysqld.cnf
!include include/default_ndbd.cnf

[cluster_config]
TimeBetweenEpochsTimeout = 30000

[cluster_config.1]
NoOfReplicas=                  2
ndbd=,
ndb_mgmd=
mysqld=,
ndbapi=,,,,,,,,,

[cluster_config.replica]
NoOfReplicas=                  1
ndbd=
ndb_mgmd=
mysqld=
ndbapi=,,,,

[mysqld]
# Make all mysqlds use cluster
ndbcluster
ndb-wait-connected=30
ndb-wait-setup=120
ndb-cluster-connection-pool=3
replica-allow-batching
ndb-log-orig
# Turn on bin logging
log-bin=                       primary-bin
# for performance reasons
ndb-table-temporary=1

ndb-extra-logging=99
# Cluster only supports row format
binlog-format=                 row

[mysqld.1.1]

[mysqld.1.1]

[mysqld.1.replica]

# Append <testname>-replica.opt file to the list of argument used when
# starting the mysqld
#!use-replica-opt

log-bin=                      replica-bin
relay-log=                    replica-relay-bin
# Cluster only supports row format
binlog-format=                 row

log-replica-updates
primary-retry-count=           10

# Values reported by replica when it connect to primary
# and shows up in SHOW REPLICA STATUS;
report-host=                  127.0.0.1
report-port=                  @mysqld.1.replica.port
report-user=                  root

skip-replica-start

# Directory where replicas find the dumps generated by "load data"
# on the server. The path need to have constant length otherwise
# test results will vary, thus a relative path is used.
replica-load-tmpdir=            ../../../tmp

[ENV]
NDB_CONNECTSTRING=            @mysql_cluster.1.ndb_connectstring
PRIMARY_MYPORT=                @mysqld.1.1.port
PRIMARY_MYPORT1=               @mysqld.2.1.port

NDB_CONNECTSTRING_REPLICA=      @mysql_cluster.replica.ndb_connectstring
REPLICA_MYPORT=                 @mysqld.1.replica.port
REPLICA_MYSOCK=                 @mysqld.1.replica.socket

NDB_BACKUP_DIR=               @cluster_config.ndbd.1.1.BackupDataDir
