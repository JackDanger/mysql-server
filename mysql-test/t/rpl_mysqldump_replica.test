
--source include/primary-replica.inc

--echo #
--echo # New --dump-replica, --apply-replica-statements functionality
--echo #

# There is a gap between when START REPLICA returns and when PRIMARY_LOG_FILE and
# PRIMARY_LOG_POS are set.  Ensure that we don't call SHOW REPLICA STATUS during
# that gap.
--sync_replica_with_primary

connection primary;
use test;

connection replica;

# Execute mysqldump with --dump-replica
--replace_regex /PRIMARY_LOG_POS=[0-9]+/PRIMARY_LOG_POS=BINLOG_START/
--exec $MYSQL_DUMP_REPLICA --compact --dump-replica test

# Execute mysqldump with --dump-replica and --apply-replica-statements 
--replace_regex /PRIMARY_LOG_POS=[0-9]+/PRIMARY_LOG_POS=BINLOG_START/
--exec $MYSQL_DUMP_REPLICA --compact --dump-replica --apply-replica-statements test

--replace_regex /PRIMARY_LOG_POS=[0-9]+/PRIMARY_LOG_POS=BINLOG_START/
--replace_result $PRIMARY_MYPORT PRIMARY_MYPORT
# Execute mysqldump with --dump-replica ,--apply-replica-statements and --include-primary-host-port
--exec $MYSQL_DUMP_REPLICA --compact --dump-replica --apply-replica-statements --include-primary-host-port test

--source include/rpl_end.inc
